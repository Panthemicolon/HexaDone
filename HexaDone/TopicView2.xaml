<UserControl x:Class="HexaDone.TopicView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexaDone"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" BorderThickness="8 0 0 0" BorderBrush="Silver" x:Name="brdMain">        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="tblTopicName" FontSize="12pt" FontWeight="Bold" Margin="5" TextWrapping="Wrap">Topic Name</TextBlock>
            <Border Grid.Column="1" Grid.Row="0" Margin="0 5 5 5" Background="#7FE8E8E8" Padding="5" x:Name="brdTasks">
                <StackPanel Name="stkpnlTasks">
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
